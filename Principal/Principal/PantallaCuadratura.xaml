        <TextBox x:Name="txtTotalVenta" HorizontalAlignment="Left" Height="23" Margin="674,471,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="txtDiferencia" HorizontalAlignment="Left" Height="23" Margin="674,510,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
