        <Label x:Name="lblCodigo" Content="Código Registro" HorizontalAlignment="Left" Margin="194,123,0,0" VerticalAlignment="Top"/>
        <Label x:Name="btnCantidadVenta" Content="Cantidad Ventas" HorizontalAlignment="Left" Margin="194,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.578,-0.07"/>
        <Label x:Name="lblCódigoVendedor" Content="Código Vendedor" HorizontalAlignment="Left" Margin="462,22,0,0" VerticalAlignment="Top"/>
        <DatePicker Margin="639,24,9.6,0" VerticalAlignment="Top"/>
